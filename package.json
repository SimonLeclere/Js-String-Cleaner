{
  "name": "js-string-cleaner",
  "version": "1.2.0",
  "description": "A simple npm module to replace special characters in a string with unicode letters.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SimonLeclere/Js-String-Cleaner.git"
  },
  "author": "Simon Lecl√®re",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SimonLeclere/Js-String-Cleaner/issues"
  },
  "homepage": "https://github.com/SimonLeclere/Js-String-Cleaner#readme",
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.1.3"
  }
}
